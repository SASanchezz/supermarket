<Window Background="LightSlateGray" x:Class="supermarket.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:supermarket.Views"
        xmlns:viewModels="clr-namespace:supermarket.ViewModels"
        xmlns:local="clr-namespace:supermarket"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel}"
        Title="MainWindow" Height="450" Width="800"
        Content="{Binding CurrentViewModel, Mode=OneWay}" IsEnabled="{Binding IsEnabled, Mode=OneWay}" ResizeMode="NoResize">
    
    <Window.Resources>
        <DataTemplate DataType="{ x:Type viewModels:SignInViewModel}">
            <views:SignInView/>
        </DataTemplate>
        <DataTemplate DataType="{ x:Type viewModels:ManagerMenuViewModel}">
            <views:ManagerMenuView/>
        </DataTemplate>
        <!--+ кассир-->
    </Window.Resources>
    
</Window>