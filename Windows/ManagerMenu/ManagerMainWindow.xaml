<Window x:Class="supermarket.Windows.ManagerMenu.ManagerMainWindow" Background="LightSlateGray"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:supermarket.Windows.ManagerMenu"
        mc:Ignorable="d"
        Title="ManagerMainWindow" Height="450" Width="800">
    <Grid x:Name="MainGrid" Background="LightGray" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" Text="Меню менеджера" VerticalAlignment="Top" FontSize="24"/>

        <Button Content="Додати нового користувача" Grid.Row="1" HorizontalAlignment="Left" Width="164" Height="24" VerticalAlignment="Top" FontSize="12" Click="OpenRegisterWindow_Button" Margin="20,0,0,0"/>
    </Grid>
</Window>
