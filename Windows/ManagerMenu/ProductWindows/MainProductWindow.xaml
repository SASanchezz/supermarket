<Window x:Class="supermarket.Windows.ManagerMenu.ProductWindows.MainProductWindow" Background="LightSlateGray"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:supermarket.Windows.ManagerMenu.ProductWindows"
        mc:Ignorable="d"
        Title="MainProductWindow" Height="450" Width="800">
    <Grid Background="LightGray" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Rectangle Fill="Azure" />
        <Button Content="Додати новий товар" Grid.Row="0" Background="LawnGreen" Width="164" Height="24" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="12" Click="OpenAddProductWindow_Button" Margin="0,0,20,0"/>
        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="productPanel">
            </StackPanel>
        </ScrollViewer>

        <Button Content="←Назад" Grid.Row="0" HorizontalAlignment="Left" Width="64" Height="24" VerticalAlignment="Center" FontSize="12" Click="Return_Button" Margin="20,0,0,0"/>
    </Grid>
</Window>
